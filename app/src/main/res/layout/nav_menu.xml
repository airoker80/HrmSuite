<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/quick_board"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_quickboard_grey" />

    <ImageView
        android:id="@+id/leave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_leave_grey" />

    <ImageView
        android:id="@+id/checkInOut"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_check_grey" />

    <ImageView
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_remark_grey" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:clickable="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile_grey" />
</LinearLayout>