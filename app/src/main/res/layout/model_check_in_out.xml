<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:background="#ededed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="@dimen/_8sdp"
            android:id="@+id/CheckinConfirmation"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp" />
        <LinearLayout
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent">
                    <com.harati.hrmsuite.Helper.CustomTextViewBold
                        android:id="@+id/checkTime"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2017-10-11"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent">
                    <com.harati.hrmsuite.Helper.CustomTextView
                        android:textAlignment="center"
                        android:id="@+id/in_out"
                        android:textSize="@dimen/_13sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="OUT"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.harati.hrmsuite.Helper.CustomTextView
                        android:layout_marginRight="@dimen/_16sdp"
                        android:id="@+id/checkinTime"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="17:45:00 "/>

                </LinearLayout>
            </LinearLayout>

            <com.harati.hrmsuite.Helper.CustomTextView
                android:layout_marginLeft="@dimen/_4sdp"
                android:id="@+id/checkReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="[Leave: Sick Leave(Paid)]"
                android:textColor="#5e5d5d"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>